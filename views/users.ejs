<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/navbar.ejs') %>
    <%- include('./partials/modals/delete_modal.ejs') %>
    <%- include('./partials/modals/info_delete_modal.ejs') %>
    <script src="felhasznalo_torles.js"></script>
    <div class="d-lg-flex justify-content-lg-center">
        <section class="py-4 py-xl-5">
            <div class="container text-start">
                <div class="text-white bg-dark border rounded border-0 p-4 p-md-5" style="width: 550px;height: auto;">
                    <h2 class="fw-bold text-white mb-3">User management</h2>
                    <form class="search-form">
                        <div class="input-group"><span class="input-group-text"><i class="fa fa-search"></i></span><input id="search_input" class="form-control" type="text" placeholder="I am looking for.." /><button class="btn btn-light" type="button" id="search_button">Search </button></div>
                    </form>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody id="deleteTable">
                                <% users.forEach((user) => { %>
                                <tr id="tr_<%= user.user_id %>">
                                    <td style="text-align: center; vertical-align: middle;"><span style="color: rgb(255, 255, 255);"><%= user.username %></span></td>
                                    <td style="text-align: center; vertical-align: middle;"><span style="color: rgb(255, 255, 255);"><%= user.email %></span></td>
                                    <td><button class="btn btn-primary btn-lg me-2 buttonsDel" role="button" value="<%= user.user_id %>" style="background: #fd1b0d;border-color: var(--bs-red);margin: 0px;vertical-align: middle;">Delete</button></td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>