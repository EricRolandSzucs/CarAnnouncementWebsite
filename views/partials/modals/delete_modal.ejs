<div class="modal" id="torles_modal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirmation</h5>
        <button type="button" class="btn-close" id="button_close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true"></span>
        </button>
      </div>
        <div class="modal-body">
          <p>Are you sure you want to delete the selected picture?</p>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="button_yes">Yes</button>
        <button type="button" class="btn btn-secondary" id="button_no" data-bs-dismiss="modal">Changed my mind</button>
      </div>
    </div>
  </div>
</div>